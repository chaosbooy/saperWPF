<Window x:Class="saper_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:saper_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1000" MinWidth="1000" MinHeight="750">

    <Grid x:Name="main">
        <StackPanel x:Name="lobby" HorizontalAlignment="Center" Margin="0,25,0,25">
            <Label Content="SELECT THE GAME MODE" FontSize="30" FontFamily="Berlin Sans FB" Margin ="0,0,0,100"/>

            <Button x:Name="game1" Content="Easy" Click="Button_Click" Margin ="0,0,0,50" Height="50" Width="200" FontSize="25" Background="Azure"/>
            <Button x:Name="game2" Content="Medium" Click="Button_Click" Margin ="0,0,0,50"  Height="50" Width="200" FontSize="25" Background="#FFA0FFFF"/>
            <Button x:Name="game3" Content="Hard" Click="Button_Click" Margin ="0,0,0,50" Height="50" Width="200" FontSize="25" Background="#FF5FF5F5"/>
        </StackPanel>

        <StackPanel x:Name="scorePanel" HorizontalAlignment="Right" Margin="0, 50, 50, 50">
            <TextBlock x:Name="scoresVisual" Width="200" VerticalAlignment="Stretch" />
        </StackPanel>
        
    </Grid>
</Window>
